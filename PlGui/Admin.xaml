<Window x:Class="PlGui.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlGui"
        mc:Ignorable="d"
        Title="Admin Window" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Buses" Width="100">
                <DataGrid Margin="20,70,20,20">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Reg" Width="*"/>
                        <DataGridTextColumn Header="Fuel" Width="*"/>
                        <DataGridTextColumn Width="*"/>
                        <DataGridTextColumn Width="*"/>
                        
                    </DataGrid.Columns>
                    
                </DataGrid>
            </TabItem>
            <TabItem Header="Lines" Width="100">
                <DataGrid Margin="20,70,20,20">

                </DataGrid>
            </TabItem>
            <TabItem Header="Stations" Width="100">
                <DataGrid Margin="20,70,20,20">

                </DataGrid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
