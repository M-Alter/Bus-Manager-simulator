<Window x:Class="PlGui.ResetPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlGui"
        mc:Ignorable="d"
        Title="Reset Password" Height="150" Width="250" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Username:" VerticalAlignment="Top" Margin="0,20"/>
        <Label x:Name="usernameLbl" Margin="70,20,0,70" />
        <Label Content="email:" VerticalAlignment="Center"/>
        <TextBox x:Name="emailTxtbox" Margin="70,0,5,0" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
        <Button x:Name="resetbtn" HorizontalAlignment="Center" Content="Resend my password by email" Click="resetbtn_Click" VerticalAlignment="Bottom" Margin="20" />
    </Grid>
</Window>
