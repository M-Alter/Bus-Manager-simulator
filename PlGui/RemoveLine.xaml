<Window x:Class="PlGui.RemoveLine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlGui"
        mc:Ignorable="d"
        Title="RemoveLine" Height="250" Width="350" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <TextBlock Text="Choose Line from the list" FontSize="20" HorizontalAlignment="Center" Margin="0,10"/>
            <ComboBox Name="lineCBox"  HorizontalAlignment="Center" Width="174" Height="30"  IsEnabled="True" Margin="0,30,0,0"/>
            <WrapPanel Margin="0,50,0,0">
                <Button x:Name="saveBtn" Content="Remove" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" Height="30" Click="saveBtn_Click" Margin="50,0,0,0"/>
                <Button x:Name="cancelBtn"  Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Center" Width="100" Height="30" Click="cancelBtn_Click" Margin="50,0,0,0"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
