<Window x:Class="PlGui.RemoveLine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlGui"
        mc:Ignorable="d"
        Title="RemoveLine" Height="450" Width="356.923">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Choose Line from the list" FontSize="20" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <ComboBox Name="lineCBox" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Width="174" Height="30"  IsEnabled="True" SelectionChanged="lineCMBox_SelectionChanged" Margin="58,0,61.333,0"/>
        <Button x:Name="saveBtn" Grid.Column="0" Grid.Row="2" Content="Remove" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" Height="30" Click="saveBtn_Click" Margin="10,27.333,0,26.667"/>
        <Button x:Name="cancelBtn" Grid.Row="2" Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Center" Width="100" Height="30" Click="cancelBtn_Click" Margin="0,27.333,10.333,26.667"/>

    </Grid>
</Window>
