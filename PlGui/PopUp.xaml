<Window x:Class="PlGui.PopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlGui"
        mc:Ignorable="d"
        Title="PopUp" Height="250" Width="500">
    <Grid>
        <Grid x:Name="busGrid" Margin="15">
            
        </Grid>
        <Grid x:Name="lineGrid" Margin="15">
            <DataGrid Margin="3,50,100,0" ItemsSource="{Binding Stations}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Station number" Binding="{Binding Station}"/>
                    <DataGridTextColumn Header="Station Name" Binding="{Binding StationName}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid x:Name="stationGrid" Margin="15">

        </Grid>
    </Grid>
</Window>
