<Window x:Class="PlGui.Credentials"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlGui"
        mc:Ignorable="d"
        Title="Credentials" Height="150" Width="300" ResizeMode="NoResize">
    <Grid>
        <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
            <Label Content="Username:" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" VerticalAlignment="Center"/>
            <Label Content="Password:" Grid.Row="1" VerticalAlignment="Center"/>
            <PasswordBox Grid.Column="1" Grid.Row="1" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
