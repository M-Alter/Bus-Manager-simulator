<Window x:Class="dotnet5781_03B_2131_1146.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotnet5781_03B_2131_1146"
        mc:Ignorable="d"
        Title="BusWindow" Height="450" Width="800">
    <Grid>
        
        <ListView x:Name="lvBuses"  Margin="10" ItemsSource="{Binding}" MouseDoubleClick="lvBuses_MouseDoubleClick" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <TextBlock Width="120" FontSize="20" Text="{Binding RegString}"/>
                        <Button Height="30" Width="30" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="https://png.pngtree.com/png-vector/20190302/ourlarge/pngtree-vector-fuel-station-icon-png-image_745318.jpg" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Button>
                        <Button Content="Pick" Height="30" Width="30" HorizontalAlignment="Center" VerticalAlignment="Center">
                        </Button>
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>   
        </ListView>
    </Grid>
</Window>
